@model HeartBlog.Models.post

@{
    ViewBag.Title = "Edit";
}
<script src="~/Scripts/ckeditor/ckeditor.js"></script>
<script src="~/Scripts/ckfinder/ckfinder.js"></script>
<h2> Edit </h2>

@using(Html.BeginForm())
{
                @Html.AntiForgeryToken()
    @ValidateRequestMode.Disabled
    <div class="form-horizontal">
        <h4>post</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
            @Html.TextAreaFor(model => model.Body, new { @class = "ckeditor" })

                 @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
            </div>
        </div>
      
        <textarea class="ckeditor"></textarea>
 
        <div class="form-group">
            @Html.LabelFor(model => model.DateTime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.DateTime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateTime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.shortBody, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.shortBody,10,100, new { @class = "ckeditor", name = "editor1" })
                @Html.ValidationMessageFor(model => model.shortBody, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.image, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.image, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.image, "", new { @class = "text-danger" })
            </div>
        </div>

        @{
            var selectList = new SelectList(
                new List<SelectListItem>
                {
            new SelectListItem {Text = "Heartinfo", Value = "1"},
            new SelectListItem {Text = "Disease Diagnosis", Value = "2"},
            new SelectListItem {Text = "Disease Treatment", Value = "3"},
            new SelectListItem {Text = "Living With Disease", Value = "4"},
            new SelectListItem {Text = "patients food", Value = "5"},
            new SelectListItem {Text = "home page", Value = "6"},


                }, "Value", "Text");
        }


        <div class="form-group">
            <div class="col-md-5">
                @Html.DropDownListFor(m => m.cat_id, selectList, "post category", new { @class = "form-control", name = "cate" })
                @Html.ValidationMessageFor(model => model.cat_id, "", new { @class = "text-danger" })
            </div>
        </div>-
        <br /><br />
        <div class="form-group">
            @Html.LabelFor(model => model.numofvisitor, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.numofvisitor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.numofvisitor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
