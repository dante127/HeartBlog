
@*this page is to submit new consulation *@


@model HeartBlog.Models.consult
@using CaptchaMvc.HtmlHelpers
@using CaptchaMvc;
  
@{
    ViewBag.Title = "Create";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>consult</h4>
        <h4 style="color:orange;margin-left:100px">@Html.ActionLink("My Consulation ", "myconsult", "consults")</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.history, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.history,10,100,new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.history, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.body, htmlAttributes: new { @class = "control-label col-md-2"  })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.body,10,100 ,new { htmlAttributes = new { @class = "form-control"  } })
                @Html.ValidationMessageFor(model => model.body, "", new { @class = "text-danger" })
            </div>
        </div>

      
        @Html.MathCaptcha() <br/>
         <p style="color:red;font-size:medium"> @ViewBag.ErrMessage </p>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
